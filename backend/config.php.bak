<?php
$host = 'localhost';
$db   = 'nama_database';
$user = 'root';
$pass = '';

try {
  $conn = new PDO("mysql:host=$host;dbname=$db;charset=utf8", $user, $pass);
  $conn->setAttribute(PDO::ATTR_ERRMODE, PDO::ERRMODE_EXCEPTION);
} catch(PDOException $e) {
  die("Koneksi gagal: " . $e->getMessage());
}
?>
